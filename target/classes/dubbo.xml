<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
				        http://www.springframework.org/schema/beans/spring-beans.xsd
				        http://code.alibabatech.com/schema/dubbo
				        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	
	<dubbo:application name="productProvider"/>
	<dubbo:registry  protocol="zookeeper" address="zookeeper://127.0.0.1:2181" timeout="30000"/>
	
	<dubbo:protocol name="dubbo" host="127.0.0.1" port="20881"/>
	<dubbo:protocol name="rest" port="8086" server="tomcat" contextpath="alading" host="127.0.0.1"/>
	
	<dubbo:service interface="com.maiquan.aladdin.service.IProductService" ref="productService" protocol="dubbo"/>
	<bean id="productService" class="com.maiquan.aladdin.service.impl.ProductServiceImpl"/>
	
	<dubbo:service interface="com.maiquan.aladdin.service.IProductSkuService" ref="productSkuService" protocol="dubbo"/>
	<bean id="productSkuService" class="com.maiquan.aladdin.service.impl.ProductSkuServiceImpl"/>
	
	<dubbo:service interface="com.maiquan.aladdin.service.IProductVoService" ref="productVoService" protocol="dubbo"/>
	<bean id="productVoService" class="com.maiquan.aladdin.service.impl.ProductVoServiceImpl"/>
	
	<dubbo:service interface="com.maiquan.aladdin.service.IProductDetailService" ref="productDetailService" protocol="dubbo"/>
	<bean id="productDetailService" class="com.maiquan.aladdin.service.impl.ProductDetailServiceImpl"/>
	
</beans>